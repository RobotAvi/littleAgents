# AI Assistant Utilities Suite - Переменные окружения
# Скопируйте этот файл в .env и заполните своими значениями

# ========================================
# OpenAI Configuration
# ========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# ========================================
# Email Configuration
# ========================================
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_app_password_or_password
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993

# ========================================
# Telegram Configuration
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ========================================
# YouTrack Configuration
# ========================================
YOUTRACK_URL=https://your-domain.youtrack.cloud
YOUTRACK_TOKEN=your_youtrack_permanent_token

# ========================================
# Git Configuration
# ========================================
GIT_REPOS_PATH=/path/to/your/repositories
GITHUB_TOKEN=your_github_personal_access_token

# ========================================
# Grafana Configuration
# ========================================
GRAFANA_URL=https://your-grafana-instance.com
GRAFANA_API_KEY=your_grafana_api_key

# ========================================
# Google Calendar Configuration
# ========================================
GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json
GOOGLE_CALENDAR_ID=primary

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=sqlite:///utilities.db
# Для PostgreSQL: postgresql://user:password@localhost:5432/utilities
# Для MySQL: mysql://user:password@localhost:3306/utilities

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379
# Для Redis с паролем: redis://:password@localhost:6379

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FILE=utilities.log

# ========================================
# Streamlit Configuration
# ========================================
STREAMLIT_PORT=8501

# ========================================
# Additional Services
# ========================================

# Slack (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#general

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/...

# Jira
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token

# Trello
TRELLO_API_KEY=your_trello_api_key
TRELLO_TOKEN=your_trello_token

# Notion
NOTION_TOKEN=secret_your_notion_integration_token

# Office 365
OFFICE365_CLIENT_ID=your_office365_client_id
OFFICE365_CLIENT_SECRET=your_office365_client_secret
OFFICE365_TENANT_ID=your_office365_tenant_id

# ========================================
# Security Settings
# ========================================
SECRET_KEY=your_secret_key_for_encryption
ENCRYPTION_KEY=your_32_byte_encryption_key

# ========================================
# External APIs
# ========================================

# Weather API (for travel planning)
WEATHER_API_KEY=your_weather_api_key

# Travel APIs
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret

# Financial APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# ========================================
# Development Settings
# ========================================
DEBUG=false
ENVIRONMENT=production
# Возможные значения: development, staging, production